<StickyElement::Trigger @offset={{this.top}} @enter={{this.parentTopEntered}} @exit={{this.parentTopExited}} @registerElement={{this.registerTopTrigger}} />

<div class="
  {{this.containerClassName}}
  {{if this.isSticky this.containerStickyClassName}}
  {{if this.isStickyTop this.containerStickyTopClassName}}
  {{if this.isStickyBottom this.containerStickyBottomClassName}}"
  style={{this.containerStyle}}>

  {{yield
    (hash
      isSticky=this.isSticky
      isStickyTop=this.isStickyTop
      isStickyBottom=this.isStickyBottom
    )
  }}

</div>

{{#if this.stickToBottom}}
  <StickyElement::Trigger @type="bottom" @offset={{this.offsetBottom}} @enter={{this.parentBottomEntered}} @exit={{this.parentBottomExited}} @registerElement={{this.registerBottomTrigger}} />
{{/if}}
